@using BookingClone.Application.Features.AttractionFeatures.DTOs;
@model GetAttractionDto
@{
    ViewData["Title"] = "Details";
}

<div class="border p-3 bg-white">
    <div class="form-group row">
        <h2 class="text-info ps-3">Attraction Reservation Details for ID @Model.ID</h2>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="AvailableTickets"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AvailableTickets" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="TicketPrice"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TicketPrice" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Duration"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Duration" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">
                            <i class="bi bi-pen"></i>
                            Edit
                        </a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back To all
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            @* Keep this empty *@
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Delete for Attraction @Model.ID</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Are you sure you want to delete?</h3>
                <p>This action cannot be reverted.</p>
            </div>
            <div class="modal-footer">
                <form method="post" asp-action="Delete">
                    <input asp-for="ID" hidden />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
