@using BookingClone.Application.Features.RoomReservationFeatures.DTOs;
@using BookingClone.Domain.Enums;
@model GetRoomReservationDto
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <input asp-for="ID" hidden />
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info ps-3">Edit Room Reservation for ID @Model.ID</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<ReservationStatus>()" class="form-control"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="TotalCost"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TotalCost" class="form-control" type="number" />
                        <span asp-validation-for="TotalCost" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CheckIn"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CheckIn" class="form-control" type="datetime-local" />
                        <span asp-validation-for="CheckIn" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CheckOut"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CheckOut" class="form-control" type="datetime-local" />
                        <span asp-validation-for="CheckOut" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i>
                                Submit
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>