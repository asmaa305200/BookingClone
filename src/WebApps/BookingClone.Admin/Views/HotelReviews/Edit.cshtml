@using BookingClone.Application.Features.HotelReviewFeatures.DTOs;
@model GetHotelReviewDto
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <input asp-for="ID" hidden />
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info ps-3">Edit Hotel Review for ID @Model.ID</h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="PositiveReview"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PositiveReview" class="form-control" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="NegativeReview"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="NegativeReview" class="form-control"></textarea>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ComfortRate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ComfortRate" class="form-control" type="number" />
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="StaffRate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StaffRate" class="form-control" type="number" />
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="FacilitiesRate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FacilitiesRate" class="form-control" type="number" />
                    </div>
                </div>



                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ValueForMoneyRate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ValueForMoneyRate" class="form-control" type="number" />
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CleanlinessRate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CleanlinessRate" class="form-control" type="number" />
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="LocationRate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LocationRate" class="form-control" type="number" />
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="HotelID"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="HotelID" class="form-control" />
                    </div>
                </div>


                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col mt-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i>
                                Submit
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</form>