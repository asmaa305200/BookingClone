@using BookingClone.Application.Features.HotelReviewFeatures.DTOs;
@model GetHotelReviewDto
@{
    ViewData["Title"] = "Details";

    string SetBadgeColor(decimal rate)
    {
        return rate switch
        {
            decimal i when i >= 8 && i <= 10 => "bg-success",
            decimal i when i >= 6 && i < 8 => "bg-secondary",
            decimal i when i >= 4 && i < 6 => "bg-warning",
            decimal i when i >= 1 && i < 4 => "bg-danger",
            _ => string.Empty
        };
    }
}

<div class="border p-3 bg-white">
    <div class="form-group row">
        <h2 class="text-info ps-3">Hotel Review Details for ID @Model.ID</h2>
    </div>
    <div class="row">
        <div class="col-8">

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="PositiveReview"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="PositiveReview" class="form-control" disabled></textarea>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="NegativeReview"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="NegativeReview" class="form-control" disabled></textarea>
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="ComfortRate"></label>
                </div>
                <div class="col-8">
                    <span class="badge @SetBadgeColor(Model.ComfortRate)">
                        @($"{Model.ComfortRate:0.#}")
                    </span>
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="StaffRate"></label>
                </div>
                <div class="col-8">
                    <span class="badge @SetBadgeColor(Model.StaffRate)">
                        @($"{Model.StaffRate:0.#}")
                    </span>
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="FacilitiesRate"></label>
                </div>
                <div class="col-8">
                    <span class="badge @SetBadgeColor(Model.FacilitiesRate)">
                        @($"{Model.FacilitiesRate:0.#}")
                    </span>
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="ValueForMoneyRate"></label>
                </div>
                <div class="col-8">
                    <span class="badge @SetBadgeColor(Model.ValueForMoneyRate)">
                        @($"{Model.ValueForMoneyRate:0.#}")
                    </span>
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="CleanlinessRate"></label>
                </div>
                <div class="col-8">
                    <span class="badge @SetBadgeColor(Model.CleanlinessRate)">
                        @($"{Model.CleanlinessRate:0.#}")
                    </span>
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="LocationRate"></label>
                </div>
                <div class="col-8">
                    <span class="badge @SetBadgeColor(Model.LocationRate)">
                        @($"{Model.LocationRate:0.#}")
                    </span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="HotelID"></label>
                </div>
                <div class="col-8">
                    <input asp-for="HotelID" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-8 offset-4 row">

                    <div class="col mt-2">

                        <a asp-action="Edit" asp-route-id=" @Model.ID" class="btn btn-primary">
                            <i class="bi bi-pen"></i>
                            Edit
                        </a>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Delete
                        </button>

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back To all
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Delete for Hotel Review @Model.ID</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Are you sure you want to delete?</h3>
                <p>This action cannot be reverted.</p>
            </div>
            <div class="modal-footer">
                <form method="post" asp-action="Delete">
                    <input asp-for="ID" hidden />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
