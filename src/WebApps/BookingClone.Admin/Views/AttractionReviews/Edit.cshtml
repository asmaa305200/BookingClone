@using BookingClone.Application.Features.AttractionReviewFeatures.DTOs;
@model GetAttractionReviewDto
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <input asp-for="ID" hidden />
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info ps-3">Edit Attraction Review for ID @Model.ID</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="AttractionID"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AttractionID" class="form-control" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Comment"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Comment" class="form-control"></textarea>
                    </div>
                </div>


                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col mt-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i>
                                Submit
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</form>