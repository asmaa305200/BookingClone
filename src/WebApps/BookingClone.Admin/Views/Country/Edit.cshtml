
@using BookingClone.Application.Features.country.DTOs;
@model CountryDetailsDto
@{
    ViewData["Title"] = "Edit";
    var selectList = (List<SelectListItem>)ViewData["Continents"];
}

<form method="post" asp-action="Edit">
    <input asp-for="ID" hidden />
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info ps-3">Edit Country for ID @Model.ID</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" type="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label>Select Continent</label>
                    </div>
                    <div class="col-8">
                        <select class="form-select" aria-label="Default select example" asp-for="ContinentID" asp-items="@selectList"></select>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i>
                                Submit
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>














